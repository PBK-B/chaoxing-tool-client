<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.UpdateCourseActivity">
    <RelativeLayout
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:onClick="back"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ivArrowLeft"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="-2dp"
                android:src="@drawable/myclass_arrow_left" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toEndOf="@id/ivArrowLeft"
                android:textSize="20sp"
                android:text="@string/back"/>
            <TextView
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:onClick="delCourse"
                android:text="@string/delCourse"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvCourseName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--课程信息-->
            <LinearLayout
                android:layout_margin="18dp"
                android:elevation="2dp"
                android:background="@drawable/myclass_item_bg"
                android:padding="18dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!--课程-->
                <LinearLayout
                    android:layout_marginBottom="23dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="18dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/myclass_book"/>
                    <EditText
                        android:id="@+id/etCourseName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:hint="课程名"
                        android:background="@null"/>
                </LinearLayout>
                <!--授课老师-->
                <LinearLayout
                    android:layout_marginBottom="23dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="18dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/myclass_user"/>
                    <EditText
                        android:id="@+id/etTeacherName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:hint="授课教师"
                        android:background="@null"/>
                </LinearLayout>

                <!--周次-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <!--起始周次-->
                    <ImageView
                        android:layout_marginRight="18dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/myclass_start"/>
                    <EditText
                        android:id="@+id/etStartWeek"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:hint="起始周次"
                        android:background="@null"/>

                    <ImageView
                        android:layout_marginRight="18dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/myclass_end"/>
                    <EditText
                        android:id="@+id/etEndWeek"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:hint="终止周次"
                        android:background="@null"/>
                </LinearLayout>


            </LinearLayout>

            <!--节次信息-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1">
                <ListView
                    android:id="@+id/lvLesson"
                    android:divider="@null"
                    android:listSelector="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="18dp"
                android:layout_marginRight="18dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/myclass_item_bg"
                android:padding="20dp"
                android:gravity="center"
                android:elevation="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btnAddCourse"
                    android:background="@drawable/myclass_btn"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:onClick="addLesson"
                    android:layout_marginRight="10dp"
                    android:text="添加课次"/>
                <TextView
                    android:id="@+id/btnSave"
                    android:background="@drawable/myclass_btn"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:onClick="save"
                    android:layout_marginRight="10dp"
                    android:text="保存修改"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>